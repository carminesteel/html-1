package ex01;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.util.ArrayList;

public class EnrollmentDAO1 {
	//데이터베이스 연결 method
	public Connection con() throws Exception{
		String driver = "oracle.jdbc.driver.OracleDriver";
		String url = "jdbc:oracle:thin:@localhost:1521:xe";
		String user = "haksa";
		String password = "pass";
		  
		Class.forName(driver);
		Connection con=DriverManager.getConnection(url, user, password);
		  
		return con;
	}
	
	//학생별 평균점수 출력 method
	public ArrayList<EnrollmentVO> slist() throws Exception{
		ArrayList<EnrollmentVO> sarray=new ArrayList<EnrollmentVO>();
		String sql="select scode, sname, dept, avg(grade) s from view_view group by scode, sname, dept order by dept";
		PreparedStatement ps=con().prepareStatement(sql);
		ResultSet rs=ps.executeQuery();
		while(rs.next()){
			EnrollmentVO vo=new EnrollmentVO();
			vo.setScode(rs.getString("scode"));
			vo.setSname(rs.getString("sname"));
			vo.setDept(rs.getString("dept"));
			vo.setAvg(rs.getDouble("s"));
			sarray.add(vo);
			System.out.println(vo.toString());
		}
		con().close();
		return sarray;
	}
}
